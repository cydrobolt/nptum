{{!-- Allow JS Handlebars braces to show --}}
{{#raw}}

<script id="cards-template" type="text/x-handlebars-template">
    <div class="col s12 m6">
        <div class="card {{card_color}} darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{card_title}}</span>
                <p>{{{card_content}}}</p>
            </div>

            <div class="card-action" id="card-{{card_id}}" data-id="{{card_id}}">
                <a id='delete-card' href='#!'>Delete</a>
                <a id='edit-card' href='#!'>Edit</a>
                {{card_actions}}
            </div>
        </div>
    </div>
</script>

<script id="rows-template" type="text/x-handlebars-template">
    <div class="row"></div>
</script>

<script id="modal-rows-template" type="text/x-handlebars-template">
    <li class="collection-item">
        <div>
            <input class='modals-row' type='text' placeholder='Today, I need to...' />
            <a href="#!" id='delete-modal-row' class="secondary-content"><i class="material-icons">clear</i></a>
        </div>
    </li>
</script>

<script id="color-picker-item-template" type="text/x-handlebars-template">
    <a data-color="{{color}}" class="{{color}} color-picker btn-floating btn-small waves-effect waves-light">&nbsp;&nbsp;</a>
</script>
{{/raw}}
